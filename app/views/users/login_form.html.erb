<h1>Please Log In</h1>
<%= form_with url: login_path, method: :post, local: true do |f|%>
    <%= f.label "Name:" %>
    <%= f.text_field :name %><br><br>
    <%= f.label "Email:" %>
    <%= f.text_field :email %><br><br>
    <%= f.label "Password:" %>
    <%= f.text_field :password %><br><br>
    <%= f.label "Password confirmation:" %>
    <%= f.text_field :password_confirmation %><br><br>
    <%= f.submit "Login"%>
<% end %>
